{
  "editor.indentSize": 2,
  "editor.tabSize": 2,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "biome.enabled": true,
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },
}